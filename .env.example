# Network Device Credentials
# Copy this file to .env and fill in your actual credentials

# Default credentials for all devices (can be overridden per device)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=your_password_here
DEFAULT_SECRET=your_enable_password_here

# Device-specific credentials (optional)
# Format: DEVICENAME_USERNAME, DEVICENAME_PASSWORD, DEVICENAME_SECRET
# Example:
# ROUTER1_USERNAME=router_admin
# ROUTER1_PASSWORD=router_password
# ROUTER1_SECRET=router_enable_password

# Email credentials for notifications
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# API Keys (if needed)
API_KEY=your_api_key_here

# Database credentials (if using database for storing results)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=network_monitoring
DB_USER=dbuser
DB_PASSWORD=dbpassword

# Slack webhook (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Syslog server (optional)
SYSLOG_SERVER=192.168.1.100
SYSLOG_PORT=514